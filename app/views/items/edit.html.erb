<% content_for :title, "Editar Cadastro de Item" %>

<div class="container container-menu">
  <h1>Editar Item</h1>

  <% if @item.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(@item.errors.count, "erro") %> impediram o salvamento:</h2>
      <ul>
        <% @item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with(model: @item, local: true) do |form| %>
    <div class="mb-3">
      <%= form.label :description, "Descrição", class: "form-label" %>
      <%= form.text_field :description, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :price, "Preço", class: "form-label" %>
      <%= form.number_field :price, step: 0.01, class: "form-control" %>
    </div>
<div class="text-center">
    <%= form.submit "Atualizar", class: "btn btn-primary" %>
</div>
  <% end %>

  <div class="mt-3 d-flex gap-2">
    <%= link_to "Visualizar Item", @item, class: "btn btn-outline-info" %>
  </div>
</div>