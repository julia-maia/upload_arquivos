  <% if @user.errors.any? %>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
<%= form_for @user, data: { turbo: false } do |f| %>

    <div class="containeredit">
    <div class="field">
      <%= f.label :nome %>
      <%= f.text_field :nome %>
    </div>
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email_address %>
    </div>
    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
    </div>
    <br>
    <div class="btn1">
      <%= f.submit "Cadastrar", class: "btnnovo" %>
    </div>
    </div>

<%end%>