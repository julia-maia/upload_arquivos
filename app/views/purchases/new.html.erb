<div class="containeredit"><h1>Nova Compra</h1>
<% if @purchase.errors.any? %>
  <div id="error_explanation" style="color: red; border: 1px solid red; padding: 10px; margin-bottom: 20px;">
    <h2><%= pluralize(@purchase.errors.count, "erro") %> impediram o salvamento:</h2>
    <ul>
      <% @purchase.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <%= form_with(model: @purchase, local: true) do |form| %>
<div>
    <%= form.label :purchaser_id, "Comprador" %>
    <%= form.collection_select :purchaser_id, @purchasers, :id, :name, prompt: "Selecione um comprador" %>
</div>

<div>
    <%= form.label :item_id, "Item" %>
    <%= form.collection_select :item_id, @items, :id, :description, prompt: "Selecione um item" %>
</div>

<div>
    <%= form.label :count, "Quantidade" %>
    <%= form.number_field :count %>
</div>
  <br>
  <%= form.submit "Criar Compra", class: "btn-active" %>
<% end %>
</div>
  <br>
  <br>
    <%= link_to "Voltar", purchases_path, class: "btn-footer" %>