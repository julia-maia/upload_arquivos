<div class="containeredit"><h1>Editar Compra</h1>

<%= form_with(model: @purchase, local: true) do |form| %>
  <div class="form-group">
    <div>
    <%= form.label :purchaser_id, "Comprador" %>
    <%= form.collection_select :purchaser_id, @purchasers, :id, :name, prompt: "Selecione um comprador" %>
    </div>
<br>
    <div>
    <%= form.label :item_id, "Item" %>
    <%= form.collection_select :item_id, @items, :id, :description, prompt: "Selecione um item" %>
    </div>
<br>
    <div>
      <%= form.label :count, "Quantidade" %>
      <%= form.number_field :count %>
    </div>
  </div>
  <br>
  <%= form.submit "Atualizar Compra", class: "btnnovo" %>
<% end %>
</div>
<%= render "botao_volta" %>