          <div class="card shadow-sm h-100">
            <div class="card-body">
              <h5 class="card-title"><%= purchaser.name %></h5>
              <p class="card-text text-muted">Cadastrado por vocÃª</p>
              <%= link_to "Visualizar Cadastro", purchaser, class: "btn btn-primary btn-sm" %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>