<% content_for :title, "Editar Cadastro de Comprador" %>

<div class="container container-menu">
  <h1>Editar Cadastro</h1>

  <% if @purchaser.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(@purchaser.errors.count, "erro") %> impediram o salvamento:</h2>
      <ul>
        <% @purchaser.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with(model: @purchaser, local: true) do |form| %>
    <div class="mb-3">
      <%= form.label :name, "Nome", class: "form-label" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <%= form.submit "Atualizar", class: "btn btn-primary" %>
  <% end %>

  <br>

  <div class="mt-3">
    <%= link_to "Visualizar Cadastro", @purchaser, class: "btn btn-outline-info me-2" %>
  </div>
</div>